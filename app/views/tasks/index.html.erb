<h1>YOUR TASKS ... Get working mate</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
    <p> <%="#{task.description} | #{task.created_at.to_s.split[0]} | #{task.completed ? "done with" : "not completed"}" %></p>
    <%= link_to "Show me the task", task_path(task) %>
    <%= link_to "Edit this task", edit_task_path(task) %>
    <%= link_to "Delete this task", task_path(task), method: :delete %>
    </li>
  <% end %>
</ul>

<%= link_to "Create a new task and get to work", new_task_path %>
